# ====================
# SOS CONFIGURATION
# ====================
SOS_AUTO_CAPTURE_PHOTO=true
SOS_AUTO_RECORD_VIDEO=true
SOS_AUTO_TRACK_LOCATION=true
SOS_LOCATION_UPDATE_INTERVAL=30
SOS_MAX_DURATION=3600

# ====================
# SAFETY FEATURES
# ====================
SAFETY_ALERT_RADIUS=1000
FOLLOW_ME_UPDATE_INTERVAL=15
LOCATION_HISTORY_RETENTION=30
MAX_TRUSTED_CONTACTS=5
MAX_EMERGENCY_CONTACTS=3

# ====================
# NOTIFICATION SETTINGS
# ====================
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
NOTIFICATION_COOLDOWN=300

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SOS_RATE_LIMIT_MAX=3
SOS_RATE_LIMIT_WINDOW=3600000

# ====================
# FILE UPLOADS
# ====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf
UPLOAD_PATH=./uploads

# ====================
# MONITORING & LOGGING
# ====================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ====================
# FEATURE TOGGLES
# ====================
ENABLE_CHATBOT=true
ENABLE_SAFE_ROUTES=true
ENABLE_FOLLOW_ME=true
ENABLE_ESCORT_SERVICE=true
ENABLE_INCIDENT_REPORTING=true
ENABLE_ANONYMOUS_REPORTING=true

# ====================
# EXTERNAL INTEGRATIONS
# ====================
WEATHER_API_KEY=your-weather-api-key-here
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here
OPENWEATHER_API_KEY=your-openweather-api-key-here

# ====================
# SECURITY HEADERS
# ====================
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_NOSNIFF=true
ENABLE_FRAMEGUARD=true

# ====================
# BACKUP & MAINTENANCE
# ====================
BACKUP_SCHEDULE=0 0 * * *
BACKUP_RETENTION_DAYS=30
AUTO_DELETE_OLD_DATA=true
DATA_RETENTION_DAYS=90

# ====================
# TESTING
# ====================
TEST_EMAIL=test@example.com
TEST_PHONE=+15551234567
ENABLE_TEST_ROUTES=false