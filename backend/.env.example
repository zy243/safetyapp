# Copy to .env and fill real values locally
PORT=5000
MONGO_URI=your_mongodb_uri_here
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
COOKIE_EXPIRE=30
NODE_ENV=development

# Email Configuration
EMAIL_USER=your_email_here
EMAIL_PASS=your_email_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
FROM_NAME=UniSafe
FROM_EMAIL=noreply@unisafe.com

TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+601xxxxxxx

GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

FRONTEND_URL=frontend_URL
GOOGLE_CLIENT_ID=YOUR_WEB_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
SESSION_SECRET=your_session_secret_here

# (optional) Public base URL if you host somewhere, used for share links
PUBLIC_BASE_URL=
ALLOWED_ORIGINS=*
MAX_UPLOAD_MB=25

# Emergency Services
EMERGENCY_PHONE=999
CAMPUS_SECURITY_PHONE=+037xxxxxxx
CAMPUS_SECURITY_EMAIL=your_email_here
CAMPUS_EMERGENCY_EMAIL=your_email_here

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN=your_expo_access_token_here

# ====================
# SOS CONFIGURATION
# ====================
SOS_AUTO_CAPTURE_PHOTO=true
SOS_AUTO_RECORD_VIDEO=true
SOS_AUTO_TRACK_LOCATION=true
SOS_LOCATION_UPDATE_INTERVAL=30
SOS_MAX_DURATION=3600

# ====================
# SAFETY FEATURES
# ====================
SAFETY_ALERT_RADIUS=1000
FOLLOW_ME_UPDATE_INTERVAL=15
LOCATION_HISTORY_RETENTION=30
MAX_TRUSTED_CONTACTS=5
MAX_EMERGENCY_CONTACTS=3

# ====================
# NOTIFICATION SETTINGS
# ====================
PUSH_NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
NOTIFICATION_COOLDOWN=300

# ====================
# RATE LIMITING
# ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SOS_RATE_LIMIT_MAX=3
SOS_RATE_LIMIT_WINDOW=3600000

# ====================
# FILE UPLOADS
# ====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf
UPLOAD_PATH=./uploads

# ====================
# MONITORING & LOGGING
# ====================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# ====================
# FEATURE TOGGLES
# ====================
ENABLE_CHATBOT=true
ENABLE_SAFE_ROUTES=true
ENABLE_FOLLOW_ME=true
ENABLE_ESCORT_SERVICE=true
ENABLE_INCIDENT_REPORTING=true
ENABLE_ANONYMOUS_REPORTING=true

# ====================
# EXTERNAL INTEGRATIONS
# ====================
WEATHER_API_KEY=your_weather_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ====================
# SECURITY HEADERS
# ====================
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_NOSNIFF=true
ENABLE_FRAMEGUARD=true

# ====================
# BACKUP & MAINTENANCE
# ====================
BACKUP_SCHEDULE=0 0 * * *
BACKUP_RETENTION_DAYS=30
AUTO_DELETE_OLD_DATA=true
DATA_RETENTION_DAYS=90

# ====================
# TESTING
# ====================
TEST_EMAIL=test@example.com
TEST_PHONE=+15551234567
ENABLE_TEST_ROUTES=false


