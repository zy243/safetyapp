{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,      // <--- ignore type errors in node_modules
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types",
    "services/guardianService.js",],
  "exclude": ["node_modules"]
}